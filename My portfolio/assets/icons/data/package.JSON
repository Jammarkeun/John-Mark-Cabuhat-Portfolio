
{
  "name": "portfolio-website",
  "version": "1.0.0",
  "description": "Modern responsive portfolio website with advanced animations and features",
  "main": "index.html",
  "scripts": {
    "start": "live-server --port=3000 --host=localhost",
    "build": "npm run minify-css && npm run minify-js && npm run optimize-images",
    "minify-css": "cleancss -o dist/css/style.min.css css/style.css css/animations.css css/responsive.css",
    "minify-js": "uglifyjs js/main.js js/animations.js js/contact.js js/utils.js -o dist/js/bundle.min.js --compress --mangle",
    "optimize-images": "imagemin images/* --out-dir=dist/images --plugin=imagemin-mozjpeg --plugin=imagemin-pngquant",
    "watch": "npm-watch",
    "serve": "http-server -p 8080 -c-1",
    "lint": "eslint js/*.js",
    "lint:fix": "eslint js/*.js --fix",
    "test": "jest",
    "lighthouse": "lighthouse http://localhost:3000 --output=html --output-path=./reports/lighthouse-report.html",
    "analyze": "webpack-bundle-analyzer dist/js/bundle.min.js",
    "deploy": "gh-pages -d .",
    "clean": "rimraf dist",
    "prebuild": "npm run clean && mkdir -p dist/css dist/js dist/images",
    "postbuild": "npm run lighthouse"
  },
  "watch": {
    "build": {
      "patterns": ["css", "js"],
      "extensions": "css,js",
      "quiet": false
    }
  },
  "keywords": [
    "portfolio",
    "website",
    "responsive",
    "modern",
    "animations",
    "javascript",
    "css3",
    "html5"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "clean-css-cli": "^5.6.2",
    "eslint": "^8.45.0",
    "gh-pages": "^5.0.0",
    "http-server": "^14.1.1",
    "imagemin": "^8.0.1",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "jest": "^29.6.1",
    "lighthouse": "^10.4.0",
    "live-server": "^1.2.2",
    "npm-watch": "^0.11.0",
    "rimraf": "^5.0.1",
    "uglify-js": "^3.17.4",
    "webpack-bundle-analyzer": "^4.9.0"
  },
  "dependencies": {
    "aos": "^2.3.4",
    "gsap": "^3.12.2",
    "lottie-web": "^5.12.2",
    "particles.js": "^2.0.0",
    "swiper": "^10.0.4",
    "typed.js": "^2.0.16"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/portfolio-website.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/portfolio-website/issues"
  },
  "homepage": "https://yourusername.github.io/portfolio-website"
}
